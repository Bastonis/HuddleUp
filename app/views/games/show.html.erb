<div class="container">
    <div class="row">
        <div class="card-panel white">
          <div class="row">
            <div class="col s12 m12 l6">
              <ul class = "game-show-info">
                <li><strong>Sport:</strong> <%= link_to @game.sport.name, location_sport_path(@location, @game) %></li>
                <li><strong>Creator:</strong> <%= link_to @game.creator.name, @game.creator %></li>
                <li><strong>Description:</strong> <%= @game.description %></li>
                <li><strong>Difficutly:</strong> <%= @game.difficulty %></li>
                <li><strong>Location:</strong> <%= @game.location.name %></li>
                <li><strong>Looking for:</strong> <%= @game.max_number_of_participants %> players</li>
                <li><%= render partial: "participants", locals: {participants: @participants, game: @game} %></li>
              </ul>
            </div>
            <div class="col s12 m12 l6">
              <%= render partial: "shared/map", locals: {game: @game} %>
            </div>
        </div>
        <div class="row">
          <table>
            <tr class="col s12 l12">
              <td><div class="game-buttons"><%= render partial: "edit_link", locals: {game: @game} %></div></td>
              <td><div class="game-buttons"><%= render partial: "join_game", locals: {participant: @participant, game: @game} %></div></td>
              <td><div class="game-buttons"><%= render partial: "leave_game", locals: {participating: @participating, game: @game} %></div></td>
              <td><%= link_to "Delete Game", location_sport_game_path(@game.location, @game.sport, @game), method: :delete, class: "waves-effect waves-light btn deep-orange", onclick: "Materialize.toast('Game Deleted', 4000, 'red')" %></td>
              <td><div class="game-buttons btn waves-effect waves-light deep-orange"><%= link_to "Back to #{@sport.name}", location_sport_path(@location, @sport) %></div></td>
            </tr>
          </table>
        </div>
        <div class="col s12 l12">
          <td><%= render partial: "add_team", locals: {game: @game} %></td>
        </div>
      </div>
  </div>
</div>

