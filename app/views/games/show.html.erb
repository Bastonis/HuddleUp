<div class="container">
    <div class="row">
      <div class="col s12 m12 l12">
        <div class="card-panel white">
          <div class="row">
            <div class="col s12 m12 l6">
              <ul class = "game-show-info">
                <li><strong>Sport:</strong> <%= link_to @game.sport.name, location_sport_path(@location, @game) %></li>
                <li><strong>Creator:</strong> <%= link_to @game.creator.name, @game.creator %></li>
                <li><strong>Description:</strong> <%= @game.description %></li>
                <li><strong>Difficutly:</strong> <%= @game.difficulty %></li>
                <li><strong>Location:</strong> <%= @game.location.name %></li>
                <li><strong>Looking for:</strong> <%= @game.max_number_of_participants %> players</li>
                <li><%= render partial: "participants", locals: {participants: @participants, game: @game} %></li>
              </ul>
            </div>
            <div class="col s12 m12 l6">
              <%= render partial: "shared/map", locals: {game: @game} %>
            </div>
        </div>
        <div class="row">
          <div class="game-buttons col m3"><%= render partial: "edit_link", locals: {game: @game} %></div>
          <div class="game-buttons col m3"><%= render partial: "join_game", locals: {participant: @participant, game: @game} %></div>

          <div class="game-buttons col m3 btn waves-effect waves-light deep-orange"><%= link_to "Back to #{@sport.name}", controller: "sports", action: "show", id: @sport %></div>
          <%= render partial: "add_team", locals: {game: @game} %>
        </div>
      </div>
    </div>
  </div>
</div>

