<div class = "container">
  <div class="card white profile">
    <h3 class="deep-orange-text">Pick a Sport for your Game!</h3>
    <% @sports.each do |row| %>
      <div class="row">
        <% row.each do |sport| %>
          <div class="col s12 m6 l3 ">
            <div class="card">
              <a href = "/locations/<%= current_user.location.id %>/sports/<%= sport.id %>/games/new">
                <div class="card-image sport-image">
                  <%= image_tag sport.image_path %>
                </div>
                <div class="card-content">
                  <span class="card-title activator grey-text text-darken-4 center-align flow-text"><p><%= render partial: "sport", locals: {sport: sport} %></p></span>
                </div>
              </a>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
