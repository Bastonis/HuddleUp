<% @sports.each do |row| %>
  <div class="row">
    <% row.each do |sport| %>
    <div class="col s12 m4 l4 ">
      <div class="card">
          <div class="card-image waves-effect waves-block waves-light">
            <img class="activator" src="http://www.stjosephschoolsylvania.org/sites/default/files/sports.jpg">
          </div>
          <div class="card-content">
            <span class="card-title activator grey-text text-darken-4 center-align flow-text"><h2><%= render partial: "sport", locals: {sport: sport} %></h2></span>
          </div>
        </div>
    </div>
    <% end %>
  </div>
<% end %>
