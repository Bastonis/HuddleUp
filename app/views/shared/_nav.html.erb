<div class="navbar-fixed">
  <nav>
    <div class = "nav-wrapper white">
      <%= render partial: "shared/logo" %>
      <ul id = "nav-mobile" class = "left hide-on-med-and-down bread-crumbs">
        <%= render partial: "shared/breadcrumbs" %>
      </ul>
      <ul id = "nav-mobile" class = "right hide-on-med-and-down">
        <% if user_with_location %>
          <li><a class="black-text" href="/users/<%= current_user.id %>">Welcome, <strong><%= current_user.name %></strong>!</a></li>
          <li><%= link_to "Find Sports", location_path(current_user.location), class: "black-text" %></li>
          <li><%= link_to "Sign out", signout_path, id: "sign_out",class: "black-text" %></li>
        <% elsif current_user %>
          <li><a class="black-text" href="/users/<%= current_user.id %>">Welcome, <strong><%= current_user.name %></strong>!</a></li>
          <li><%= link_to "Sign out", signout_path, id: "sign_out",class: "black-text" %></li>
        <% else %>
            <li><%= link_to "Sign in with Facebook", "/auth/facebook", id: "sign_in", class: "black-text" %></li>
        <% end %>
      </ul>
    </div>
  </nav>
</div>
