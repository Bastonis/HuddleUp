<div class = "container">

	<h4 class = "title"><%= @user.name %>'s Profile</h4>
	<% if current_user == @user %>
	  <p>City:
	    <%= form_for @user do |f| %>
	      <%= render partial: "city_form", locals: {f: f} %>
	    <% end %>
	  </p>
	<% end %>
	<div class = "row">
		<div class="col m4">
			<div class="card grey">
            	<div class="card-content white-text">
					<h4>Games Today</h4>
					<% @games_today.each do |game| %>
					  <%= render partial: "sports/games", locals: {game: game} %>
					<% end %>
				</div>
			</div>
		</div>
		<div class="col m4">
			<div class="card grey">
            	<div class="card-content white-text">
					<h4>Games Created</h4>
					<% @games_created.each do |game| %>
					  <%= render partial: "sports/games", locals: {game: game} %>
					<% end %>
				</div>
			</div>
		</div>
		<div class="col m4">
			<div class="card grey">
            	<div class="card-content white-text">
					<h4>Upcoming Games</h4>
					<% @games_upcoming.each do |game| %>
					  <%= render partial: "sports/games", locals: {game: game} %>
					<% end %>
				</div>
			</div>
		</div>

	</div>
</div>